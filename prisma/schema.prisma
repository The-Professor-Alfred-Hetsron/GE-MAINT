// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  nom       String
  email     String @unique
  matricule String @unique
  role      String @default("Responsable")
}

model Equipement {
  id               Int           @id @default(autoincrement())
  code             String        @unique
  nom              String
  marque_fabricant String
  image            String        @default("")
  description      String
  localistation    String
  numero_serie     String        @unique
  modele           String
  etat             String
  SousSysteme      SousSysteme[]
}

model SousSysteme {
  id               Int        @id @default(autoincrement())
  nom              String
  numero_serie     String     @unique
  marque_fabricant String
  image            String     @default("")
  description      String
  modele           String
  equipement       Equipement @relation(fields: [equipement_id], references: [id])
  equipement_id    Int
  pieces           Piece[]
  pannes           Panne[]
}

model Piece {
  id               Int           @id @default(autoincrement())
  nom              String
  numero_serie     String        @unique
  marque_fabricant String
  image            String        @default("")
  description      String
  modele           String
  stock            Int
  minimum_stock    Int           @default(0)
  soussysteme      SousSysteme   @relation(fields: [soussysteme_id], references: [id])
  soussysteme_id   Int
  transactions     Transaction[]
}

model Transaction {
  id               Int      @id @default(autoincrement())
  quantite         Int      @default(1)
  date_transaction DateTime @default(now())
  type_transaction String
  piece    Piece @relation(fields: [piece_id], references: [id])
  piece_id Int
}

model Panne {
  id             Int            @id @default(autoincrement())
  nom            String
  description    String
  garvite        Int
  soussysteme    SousSysteme    @relation(fields: [soussysteme_id], references: [id])
  soussysteme_id Int
  interventions  Intervention[]
}

model Intervention {
  id                 Int      @id @default(autoincrement())
  etat_initial       String
  etat_final         String
  executant          String
  debut_intervention DateTime
  fin_intervention   DateTime
  observation        String
  panne              Panne    @relation(fields: [panne_id], references: [id])
  panne_id           Int
}
